<% if(reset_password_token.isValid) {%>
<h1>Reset Password</h1>
<form
  action="/users/reset-password/<%=reset_password_token.accessToken%>"
  method="POST">
  <input name="password" type="password" placeholder="Enter the new password" />
  <input name="confirm_password" placeholder="Confirm your password" />
  <input type="submit" type="password" value="Reset your Password" />
</form>
<%} else {%>

<p>Your password reset link is expired</p>
<%} %>
